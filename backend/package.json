{
    "name": "erp",
    "version": "0.0.0",
    "scripts": {
        "build": "ts-node build.ts",
        "lint": "eslint . --ext .ts",
        "start:prod": "node -r module-alias/register ./dist --env=production",
        "start": "nodemon --legacy-watch",
        "test": "NODE_ENV=test mocha --exit -r ts-node/register test/**/*.test.ts",
        "coverage": "nyc --check-coverage --lines 80 --reporter=text npm run test",
        "format": "npx prettier --write ."
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts, html",
        "ignore": [
            "src/public"
        ],
        "exec": "ts-node -r tsconfig-paths/register ./src"
    },
    "_moduleAliases": {
        "@daos": "dist/daos",
        "@models": "dist/models",
        "@shared": "dist/shared",
        "@server": "dist/Server"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "rules": {
            "max-len": [
                "error",
                {
                    "code": 100
                }
            ],
            "no-console": 1,
            "no-extra-boolean-cast": 0,
            "@typescript-eslint/restrict-plus-operands": 0,
            "@typescript-eslint/explicit-module-boundary-types": 0,
            "@typescript-eslint/no-explicit-any": 0,
            "@typescript-eslint/no-floating-promises": 0,
            "@typescript-eslint/no-unsafe-member-access": 0,
            "@typescript-eslint/no-unsafe-assignment": 0
        }
    },
    "eslintIgnore": [
        "src/public/",
        "build.ts"
    ],
    "dependencies": {
        "@types/basic-auth": "^1.1.3",
        "@types/passport-jwt": "^3.0.3",
        "basic-auth": "^2.0.1",
        "bcrypt": "^5.0.0",
        "body-parser": "^1.19.0",
        "command-line-args": "^5.1.1",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "helmet": "^4.4.1",
        "http-status-codes": "^2.1.4",
        "jet-logger": "^1.0.4",
        "jsonfile": "^6.1.0",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.21.17",
        "log4js": "^6.3.0",
        "module-alias": "^2.2.2",
        "morgan": "^1.10.0",
        "mysql": "^2.18.1",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/bcrypt": "^3.0.0",
        "@types/chai": "^4.2.14",
        "@types/command-line-args": "^5.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.11",
        "@types/find": "^0.2.1",
        "@types/fs-extra": "^9.0.6",
        "@types/jasmine": "^3.6.3",
        "@types/jsonfile": "^6.0.0",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mocha": "^8.2.0",
        "@types/morgan": "^1.9.2",
        "@types/mysql": "^2.15.17",
        "@types/node": "^14.14.22",
        "@types/passport": "^1.0.5",
        "@types/passport-jwt": "^3.0.3",
        "@types/sinon": "^9.0.10",
        "@types/sinon-chai": "^3.2.5",
        "@types/sinon-stub-promise": "^2.1.7",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "chai": "^4.2.0",
        "eslint": "^7.18.0",
        "find": "^0.3.0",
        "fs-extra": "^9.1.0",
        "jasmine": "^3.6.4",
        "mocha": "^8.2.1",
        "nodemon": "^2.0.7",
        "nyc": "^15.1.0",
        "prettier": "2.2.1",
        "sinon": "^9.2.4",
        "sinon-chai": "^3.5.0",
        "sinon-stub-promise": "^4.0.0",
        "source-map-support": "^0.5.19",
        "supertest": "^6.1.1",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.3"
    }
}
